<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="johmphot.card" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".FinishActivity"
            android:label="@string/title_activity_finish" >
        </activity>
        <activity
            android:name=".bluetooth.CreateMatchActivity"
            android:label="@string/title_activity_create_match" >
        </activity>
        <activity
            android:name=".bluetooth.DeviceListActivity"
            android:label="@string/select_device" >
        </activity>
        <activity
            android:name=".local.MainLocal"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".local.end"
            android:label="@string/title_activity_end" >
        </activity>
        <activity
            android:name=".local.p1"
            android:label="@string/title_activity_p1" >
        </activity>
        <activity
            android:name=".local.p2"
            android:label="@string/title_activity_p2" >
        </activity>
    </application>

</manifest>
