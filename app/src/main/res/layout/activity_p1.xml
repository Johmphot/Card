<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/p1"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thaninpongp.simple.p1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout8"
        android:layout_alignWithParentIfMissing="false"
        android:rotation="180"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView33"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView34"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView35"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView36"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout9"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/linearLayout8"
        android:layout_marginTop="80dp"
        android:layout_alignStart="@+id/linearLayout8">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView9"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:nestedScrollingEnabled="false"
            android:onClick="onClickp11" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView10"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp12" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView11"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp13" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView12"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp14" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/button2"
        android:rotation="90"
        android:onClick="onClickRestart1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView17"
            android:src="@drawable/ghp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView19" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView18"
            android:src="@drawable/yhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView19" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView19"
            android:src="@drawable/ohp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView19" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView20"
            android:src="@drawable/rhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView19" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player2"
        android:id="@+id/textView5"
        android:layout_above="@+id/linearLayout10"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout11"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView21"
            android:src="@drawable/ghp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView23" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView22"
            android:src="@drawable/yhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView23" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView23"
            android:src="@drawable/ohp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView23" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView24"
            android:src="@drawable/rhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView23" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 1"
        android:id="@+id/textView6"
        android:layout_above="@+id/linearLayout11"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Turn"
        android:id="@+id/button5"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickChange1to2"/>

</RelativeLayout>
