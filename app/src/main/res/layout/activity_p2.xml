<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/p2"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thaninpongp.simple.p2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout12"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView7"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout13"
        android:layout_alignWithParentIfMissing="false"
        android:rotation="180"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/linearLayout12"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView13"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp21" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView14"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp22" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView15"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp23" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView16"
            android:src="@drawable/blackcard"
            android:layout_margin="3dp"
            android:onClick="onClickp24" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout14"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView25"
            android:src="@drawable/rhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView27" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView26"
            android:src="@drawable/ohp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView27" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView27"
            android:src="@drawable/yhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView27" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView28"
            android:src="@drawable/ghp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView27" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 1"
        android:id="@+id/textView7"
        android:rotation="180"
        android:layout_below="@+id/linearLayout14"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout15"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView29"
            android:src="@drawable/rhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView31" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView30"
            android:src="@drawable/ohp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView31" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView31"
            android:src="@drawable/yhp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView31" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView32"
            android:src="@drawable/ghp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView31" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player2"
        android:id="@+id/textView8"
        android:rotation="180"
        android:layout_below="@+id/linearLayout15"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/button3"
        android:rotation="90"
        android:onClick="onClickRestart2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Turn"
        android:id="@+id/button5"
        android:rotation="180"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickChange2to1"/>

</RelativeLayout>
